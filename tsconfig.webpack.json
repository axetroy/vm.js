{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "esnext"],
    "strictNullChecks": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "rootDirs": ["."],
    "inlineSources": true,
    "outDir": "./",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "*.test.ts"]
}
